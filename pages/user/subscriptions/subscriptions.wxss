/* pages/user/subscriptions/subscriptions.wxss */
.page-container {
  background: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  display: flex;
  align-items: center;
  background: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.back-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 8rpx;
}

.page-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  margin-right: 120rpx; /* 平衡标题位置 */
}

.content {
  padding: 30rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin: 30rpx 0 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 40rpx;
}

.empty-action {
  color: #07c160;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border: 1rpx solid #07c160;
  border-radius: 50rpx;
}

/* 订阅列表 */
.subscription-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.status-badge {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.status-badge.active {
  background: #e6f7ff;
  color: #1890ff;
}

.status-badge.completed {
  background: #f0f9f4;
  color: #07c160;
}

.course-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.teacher-name {
  font-size: 26rpx;
  color: #666;
}

.course-price {
  font-size: 28rpx;
  color: #e74c3c;
  font-weight: bold;
}

.subscription-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-bottom: 25rpx;
}

.subscribe-time,
.expire-time {
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.action-btn {
  flex: 1;
  min-width: 180rpx;
  padding: 20rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 26rpx;
  text-align: center;
}

.view-btn {
  background: #c5cdd4;
  color: #333;
}

.verify-btn {
  background: #2e95fc;
  color: white;
}

/* 评论按钮样式 */
.comment-btn {
  background: #07c160;
  color: white;
}

.comment-btn.commented {
  background: #fa966c;
  color: white;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .action-buttons {
    flex-direction: column;
  }
  
  .action-btn {
    min-width: auto;
  }
}