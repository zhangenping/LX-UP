/* pages/user/profile.wxss */
.page-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
  margin-right: 25rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.role-container {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.user-role {
  font-size: 24rpx;
  color: #666;
  background: #f8f9fa;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

.student-role {
  background: #e3f2fd;
  color: #1976d2;
}

.teacher-role {
  background: #f3e5f5;
  color: #7b1fa2;
}

/* 待审核标识 */
.pending-badge {
  font-size: 20rpx;
  color: #ff9800;
  background: #fff3e0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ffb74d;
}

/* 已认证标识 */
.approved-badge {
  font-size: 20rpx;
  color: #07c160;
  background: #f0f9f4;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid #07c160;
}

/* 审核提示信息 */
.audit-notice {
  background: #fff8e1;
  border: 1rpx solid #ffd54f;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.notice-content {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #ff9800;
  flex: 1;
  line-height: 1.4;
}

.stats {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 教师信息卡片 */
.teacher-info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.edit-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #1989fa;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #f0f7ff;
}

.teacher-details {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  width: calc(50% - 10rpx);
}

.detail-item.full-width {
  width: 100%;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

/* 菜单区域 */
.menu-section {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.menu-list {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-badge {
  background: #e74c3c;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 15rpx;
}

/* 禁用状态的菜单项 */
.disabled-menu {
  opacity: 0.5;
}

.disabled-menu .menu-text {
  color: #999;
}

/* 点击效果 */
.stat-item:active {
  opacity: 0.7;
}

.menu-item:active {
  background-color: #f8f9fa;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .detail-item {
    width: 100%;
  }
  
  .page-container {
    padding: 15rpx;
  }
  
  .user-card {
    padding: 30rpx 20rpx;
  }
  
  .teacher-info-card {
    padding: 25rpx 20rpx;
  }
}