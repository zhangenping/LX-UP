/* pages/user/profile.wxss */
.page-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
  margin-right: 25rpx;
}

.user-detail {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.role-container {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.user-role {
  font-size: 24rpx;
  color: #666;
  background: #f8f9fa;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

.student-role {
  background: #e3f2fd;
  color: #1976d2;
}

.teacher-role {
  background: #f3e5f5;
  color: #7b1fa2;
}

/* 待审核标识 */
.pending-badge {
  font-size: 20rpx;
  color: #ff9800;
  background: #fff3e0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ffb74d;
}

/* 已认证标识 */
.approved-badge {
  font-size: 20rpx;
  color: #07c160;
  background: #f0f9f4;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid #07c160;
}

/* 审核提示信息 */
.audit-notice {
  background: #fff8e1;
  border: 1rpx solid #ffd54f;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.notice-content {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #ff9800;
  flex: 1;
  line-height: 1.4;
}

.stats {
  display: flex;
  justify-content: space-around;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 教师信息卡片 */
.teacher-info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.edit-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #1989fa;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #f0f7ff;
}

.teacher-details {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  width: calc(50% - 10rpx);
}

.detail-item.full-width {
  width: 100%;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

/* 菜单区域 */
.menu-section {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.menu-list {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.menu-badge {
  background: #e74c3c;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 15rpx;
}

/* 禁用状态的菜单项 */
.disabled-menu {
  opacity: 0.5;
}

.disabled-menu .menu-text {
  color: #999;
}

/* 点击效果 */
.stat-item:active {
  opacity: 0.7;
}

.menu-item:active {
  background-color: #f8f9fa;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .detail-item {
    width: 100%;
  }
  
  .page-container {
    padding: 15rpx;
  }
  
  .user-card {
    padding: 30rpx 20rpx;
  }
  
  .teacher-info-card {
    padding: 25rpx 20rpx;
  }
}

/* 教师核销功能 */
.verify-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.verify-card {
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid #bae7ff;
}

.verify-content {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.verify-text {
  flex: 1;
  margin-left: 20rpx;
}

.verify-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.verify-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.verify-btn {
  background: #07c160;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  width: 100%;
}

.verify-btn:active {
  opacity: 0.8;
}

/* 学生评价功能样式 */
.reviews-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.reviews-card {
  background: linear-gradient(135deg, #f9f0ff 0%, #f3e5f5 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  border: 1rpx solid #e1bee7;
}

.reviews-content {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.reviews-text {
  flex: 1;
  margin-left: 20rpx;
}

.reviews-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #7232dd;
  margin-bottom: 8rpx;
}

.reviews-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.reviews-btn {
  background: #7232dd;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  width: 100%;
}

.reviews-btn:active {
  opacity: 0.8;
}

/* 核销弹窗 */
.verify-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx 30rpx 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.verify-input-section {
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.verify-input {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 25rpx;
  font-size: 32rpx;
  text-align: center;
  letter-spacing: 4rpx;
  font-weight: bold;
  background: #fafafa;
  box-sizing: border-box;
}

.verify-input:focus {
  border-color: #07c160;
  background: white;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.btn-cancel {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 25rpx;
  font-size: 28rpx;
}

.btn-confirm {
  flex: 1;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 25rpx;
  font-size: 28rpx;
}

.btn-cancel:active,
.btn-confirm:active {
  opacity: 0.8;
}

/* 扫码相关样式 */
.scan-type-tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active {
  background: white;
  color: #07c160;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.scan-section {
  text-align: center;
  padding: 40rpx 0;
}

.scan-container {
  padding: 60rpx 0;
}

.scan-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0 10rpx;
}

.scan-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.scan-result {
  background: #f0f9f4;
  border: 1rpx solid #07c160;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-top: 30rpx;
  text-align: left;
}

.result-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-right: 15rpx;
}

.result-code {
  font-size: 26rpx;
  color: #07c160;
  font-weight: bold;
  word-break: break-all;
}

.input-tips {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  margin-top: 15rpx;
}

.btn-scan-again {
  flex: 1;
  background: #1989fa;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 25rpx;
  font-size: 28rpx;
}

.btn-scan-again:active {
  opacity: 0.8;
}

.btn-confirm.disabled {
  background: #ccc;
  color: #999;
}