/* pages/my/verify-codes/verify-codes.wxss */
.page-container {
  background: #f5f5f5;
  min-height: 100vh;
}

.page-header {
  display: flex;
  align-items: center;
  background: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.back-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 8rpx;
}

.page-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.content {
  padding: 30rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin: 30rpx 0 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 40rpx;
}

.empty-action {
  color: #07c160;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border: 1rpx solid #07c160;
  border-radius: 50rpx;
}

/* 核销码列表 */
.verify-code-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.code-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 25rpx;
}

.course-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.status-badge {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.status-badge.active {
  background: #e6f7ff;
  color: #1890ff;
}

.status-badge.used {
  background: #f6ffed;
  color: #52c41a;
}

.status-badge.expired {
  background: #fff2f0;
  color: #ff4d4f;
}

.code-display {
  text-align: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 25rpx;
  border: 2rpx dashed #e0e0e0;
}

.code-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  letter-spacing: 8rpx;
  color: #e74c3c;
  margin-bottom: 15rpx;
}

.code-hint {
  font-size: 24rpx;
  color: #999;
}

.code-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  font-size: 24rpx;
  color: #999;
}

.code-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 26rpx;
}

.copy-btn {
  background: #f8f9fa;
  color: #333;
}

.qr-btn {
  background: #07c160;
  color: white;
}