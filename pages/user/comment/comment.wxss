/* pages/user/comment/comment.wxss */
.page-container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  background: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.back-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 8rpx;
}

.page-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  margin-right: 120rpx;
}

/* 课程信息 */
.course-card {
  background: white;
  margin: 20rpx 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.teacher-info {
  font-size: 26rpx;
  color: #666;
}

/* 评价内容区域 */
.comment-section {
  background: white;
  margin: 0 30rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

/* 评分区域 */
.rating-section {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.star-rating {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.star {
  font-size: 50rpx;
  color: #ddd;
  transition: all 0.3s;
}

.star.active {
  color: #ffd700;
  transform: scale(1.1);
}

.rating-text {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  display: block;
}

/* 标签区域 */
.tags-section {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.tag {
  padding: 16rpx 30rpx;
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

/* 选中状态的标签 */
.tag.selected {
  background: #1890ff !important;
  border-color: #1890ff !important;
  color: white !important;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.3);
}

.tags-tip {
  font-size: 22rpx;
  color: #999;
}

/* 评论输入区域 */
.comment-input-section {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comment-input {
  width: 100%;
  height: 200rpx;
  background: #f8f9fa;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 25rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
  margin-bottom: 15rpx;
}

.comment-input:focus {
  border-color: #07c160;
  background: white;
}

.word-count {
  text-align: right;
  font-size: 22rpx;
  color: #999;
}

/* 匿名选项 */
.anonymous-section {
  margin-bottom: 30rpx;
}

.anonymous-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.option-text {
  font-size: 28rpx;
  color: #333;
}

.anonymous-tip {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.submit-btn {
  width: 100%;
  padding: 25rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: bold;
  transition: all 0.3s;
}

.submit-btn.active {
  background: #07c160;
  color: white;
}

.submit-btn.disabled {
  background: #ccc;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .page-header,
  .course-card,
  .comment-section {
    margin-left: 20rpx;
    margin-right: 20rpx;
  }
  
  .star-rating {
    gap: 15rpx;
  }
  
  .star {
    font-size: 45rpx;
  }
}