/* pages/index/index.wxss */
.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  /* 如果轮播图贴顶，可能需要调整整体布局 */
  padding-top: 0; /* 确保容器没有顶部内边距 */
}

/* ===== 轮播图板块 ===== */
.banner-section {
  width: 100%;
  background: white;
  /* 移除原有的顶部内边距，只保留左右和底部 */
  padding: 0 0 20rpx; /* 上:0, 左右:30, 下:20 */
  box-sizing: border-box;
  position: relative;
  z-index: 10;
  /* 安全区域适配 - 直接使用环境变量，不加额外padding */
  padding-top: env(safe-area-inset-top, 0px);
}

.banner-swiper {
  width: 100%;
  height: 400rpx;
  /* 移除圆角或调整圆角，让顶部更贴合 */
  overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.12);
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 自定义轮播指示点 */
.banner-swiper .wx-swiper-dots {
  bottom: 30rpx !important;
}

.banner-swiper .wx-swiper-dot {
  width: 12rpx !important;
  height: 12rpx !important;
  background: rgba(255, 255, 255, 0.6) !important;
  opacity: 0.8 !important;
  margin: 0 6rpx !important;
}

.banner-swiper .wx-swiper-dot-active {
  width: 36rpx !important;
  background: #07c160 !important;
  border-radius: 8rpx !important;
}

.teacher-scroll {
  flex: 1;
  width: 100%;
}

.teacher-list {
  padding: 30rpx;
  min-height: 100%;
  margin-top: 20rpx;
}

.teacher-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.teacher-card:active {
  transform: scale(0.98);
  background: #fafafa;
}

.teacher-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.avatar-section {
  position: relative;
  margin-right: 24rpx;
}

.teacher-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
}

.rating-tag {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #ff6b35, #ff8e53);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  min-width: 60rpx;
}

.rating-text {
  font-size: 22rpx;
  color: white;
  font-weight: bold;
  text-align: center;
}

.teacher-info {
  flex: 1;
}

.name-section {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.teacher-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.teacher-title {
  font-size: 24rpx;
  color: #07c160;
  background: #f0f9f4;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.teacher-specialty {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.student-count {
  font-size: 24rpx;
  color: #999;
}

.count-text {
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.teacher-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  background: linear-gradient(135deg, #07c160, #52c41a);
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  color: white;
  font-size: 26rpx;
  font-weight: 500;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  text-align: center;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
}

/* 安全区域适配 */
@supports (padding-bottom: constant(safe-area-inset-bottom)) {
  .teacher-scroll {
    padding-bottom: constant(safe-area-inset-bottom);
  }
}

@supports (padding-bottom: env(safe-area-inset-bottom)) {
  .teacher-scroll {
    padding-bottom: env(safe-area-inset-bottom);
  }
}