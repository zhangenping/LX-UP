.container {
    padding: 40rpx;
    min-height: 100vh;
    background-color: #f5f5f5;
  }
  
  .search-section {
    background: white;
    border-radius: 16rpx;
    padding: 40rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 30rpx;
    text-align: center;
  }
  
  .input-group {
    display: flex;
    align-items: center;
  }
  
  .input {
    flex: 1;
    height: 80rpx;
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    margin-right: 20rpx;
  }
  
  .input:focus {
    border-color: #07c160;
  }
  
  .search-btn {
    background-color: #07c160;
    color: white;
    border: none;
    border-radius: 12rpx;
    padding: 0 40rpx;
    height: 80rpx;
    font-size: 28rpx;
  }
  
  .search-btn[disabled] {
    background-color: #cccccc;
    color: #666666;
  }
  
  .result-section {
    background: white;
    border-radius: 16rpx;
    overflow: hidden;
  }
  
  .result-card {
    padding: 40rpx;
  }
  
  .result-card.success {
    background: linear-gradient(135deg, #07c160, #06a652);
  }
  
  .result-card.error {
    background: linear-gradient(135deg, #fa5151, #e64340);
  }
  
  .result-title {
    color: white;
    font-size: 32rpx;
    font-weight: bold;
    display: block;
    margin-bottom: 20rpx;
  }
  
  .result-content {
    color: white;
    font-size: 28rpx;
    display: block;
  }
  
  .loading {
    text-align: center;
    padding: 40rpx;
    color: #666;
    font-size: 28rpx;
  }