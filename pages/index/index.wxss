/* pages/index/index.wxss */
.container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.teacher-scroll {
  flex: 1;
  width: 100%;
}

.teacher-list {
  padding: 30rpx;
  min-height: 100%;
}

.teacher-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.teacher-card:active {
  transform: scale(0.98);
  background: #fafafa;
}

.teacher-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.avatar-section {
  position: relative;
  margin-right: 24rpx;
}

.teacher-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
}

.rating-tag {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #ff6b35, #ff8e53);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  min-width: 60rpx;
}

.rating-text {
  font-size: 22rpx;
  color: white;
  font-weight: bold;
  text-align: center;
}

.teacher-info {
  flex: 1;
}

.name-section {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.teacher-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.teacher-title {
  font-size: 24rpx;
  color: #07c160;
  background: #f0f9f4;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.teacher-specialty {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.student-count {
  font-size: 24rpx;
  color: #999;
}

.count-text {
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.teacher-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  background: linear-gradient(135deg, #07c160, #52c41a);
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  color: white;
  font-size: 26rpx;
  font-weight: 500;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  text-align: center;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
}

/* 安全区域适配 */
@supports (padding-bottom: constant(safe-area-inset-bottom)) {
  .teacher-scroll {
    padding-bottom: constant(safe-area-inset-bottom);
  }
}

@supports (padding-bottom: env(safe-area-inset-bottom)) {
  .teacher-scroll {
    padding-bottom: env(safe-area-inset-bottom);
  }
}