<!--pages/index/index.wxml-->
<view class="container">
  <!-- 宣传图片轮播 -->
  <view class="banner-section">
    <swiper 
      class="banner-swiper" 
      indicator-dots="{{true}}" 
      autoplay="{{true}}" 
      interval="{{3000}}" 
      duration="{{500}}"
      circular="{{true}}"
    >
      <swiper-item>
        <image 
          class="banner-image" 
          src="/images/banners/banner1.jpg" 
          mode="aspectFill" 
        />
      </swiper-item>
      <swiper-item>
        <image 
          class="banner-image" 
          src="/images/banners/banner2.jpg" 
          mode="aspectFill" 
        />
      </swiper-item>
      <swiper-item>
        <image 
          class="banner-image" 
          src="/images/banners/banner3.jpg" 
          mode="aspectFill" 
        />
      </swiper-item>
    </swiper>
  </view>
  <!-- 教师列表 -->
  <scroll-view class="teacher-scroll" scroll-y>
    <view class="teacher-list">
      <van-skeleton title row="3" loading="{{loading}}">
        <block wx:for="{{teachers}}" wx:key="_id">
          <view class="teacher-card" bindtap="onTeacherTap" data-id="{{item._id}}">
            <view class="teacher-header">
              <view class="avatar-section">
                <image class="teacher-avatar" src="{{item.avatar}}" mode="aspectFill" />
                <view class="rating-tag">
                  <text class="rating-text">{{item.rating || 5.0}}</text>
                </view>
              </view>
              <view class="teacher-info">
                <view class="name-section">
                  <text class="teacher-name">{{item.name}}</text>
                  <text class="teacher-title">{{item.title}}</text>
                </view>
                <view class="teacher-specialty">擅长: {{item.specialty}}</view>
                <view class="student-count">
                  <text class="count-text">{{item.studentCount || 0}} 名学生</text>
                </view>
              </view>
            </view>
            
            <view class="teacher-footer">
              <half-rate-star value="{{item.rating || 5}}" size="24" readonly />
              <view class="action-btn">
                <text>查看详情</text>
              </view>
            </view>
          </view>
        </block>
        
        <view wx:if="{{teachers.length === 0 && !loading}}" class="empty-state">
          <image src="/images/default-avatar.png" class="empty-image" />
          <text class="empty-text">暂无教师数据</text>
          <text class="empty-desc">快去邀请老师加入吧</text>
        </view>
      </van-skeleton>
    </view>
  </scroll-view>
</view>