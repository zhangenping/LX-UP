/* pages/teacher/detail.wxss */
page {
  background: linear-gradient(135deg, #07c160, #52c41a);
  height: 100vh;
  margin: 0;
  padding: 0;
  width: 100vw;
  overflow-x: hidden;
}

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #07c160, #52c41a);
  display: flex;
  flex-direction: column;
  width: 100vw;
  box-sizing: border-box;
}

/* 教师头部信息 */
.teacher-header {
  background: transparent;
  padding: 60rpx 30rpx 40rpx;
  flex-shrink: 0;
  width: 100%;
  box-sizing: border-box;
}

.header-content {
  display: flex;
  align-items: flex-start;
  width: 100%;
}

.avatar-section {
  position: relative;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.teacher-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  border: 4rpx solid rgba(255,255,255,0.8);
  background: #fff;
}

.avatar-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: linear-gradient(135deg, #ff6b35, #ff8e53);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
}

.rating-text {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
}

.teacher-basic-info {
  flex: 1;
  color: white;
  min-width: 0; /* 重要：防止内容撑开 */
}

.name-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  width: 100%;
}

.teacher-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 20rpx;
  word-break: break-all;
}

.teacher-title {
  font-size: 24rpx;
  background: rgba(255,255,255,0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  flex-shrink: 0;
}

.teacher-stats {
  display: flex;
  align-items: center;
  background: rgba(255,255,255,0.15);
  border-radius: 16rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
  width: 100%;
  box-sizing: border-box;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.9;
  word-break: break-all;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(255,255,255,0.3);
  flex-shrink: 0;
}

/* 修复：Tab 容器宽度问题 */
.tab-container {
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 60vh;
  height: 60vh;
  width: 100vw;
  box-sizing: border-box;
  overflow: hidden;
}

/* 修复 Vant Tabs 宽度问题 */
.tab-container .van-tabs {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100% !important;
}

.tab-container .van-tabs__wrap {
  flex-shrink: 0;
  width: 100% !important;
}

.tab-container .van-tabs__nav {
  width: 100% !important;
}

.tab-container .van-tabs__content {
  flex: 1;
  height: calc(100% - 80rpx);
  min-height: 0;
  width: 100% !important;
}

.tab-container .van-tab__pane {
  height: 100%;
  overflow-y: auto;
  width: 100% !important;
  box-sizing: border-box;
}

.tab-content {
  padding: 30rpx;
  height: 100%;
  box-sizing: border-box;
  overflow-y: auto;
  width: 100%;
}

/* 信息卡片 - 确保宽度固定 */
.info-card {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  word-break: break-all;
}

/* 课程卡片 - 确保宽度固定 */
.course-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #f0f0f0;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
  width: 100%;
  box-sizing: border-box;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  width: 100%;
}

.course-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  word-break: break-all;
  min-width: 0;
}

.course-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
  flex-shrink: 0;
}

.course-info {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  width: 100%;
}

.info-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.course-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 24rpx;
  word-break: break-all;
  width: 100%;
}

.course-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.course-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  flex: 1;
  min-width: 0;
}

.tag {
  font-size: 22rpx;
  color: #07c160;
  background: #f0f9f4;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.subscribe-btn {
  background: #07c160;
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  flex-shrink: 0;
}

/* 评价卡片 - 确保宽度固定 */
.review-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  width: 100%;
}

.reviewer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.reviewer-info {
  flex: 1;
  min-width: 0;
}

.reviewer-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.review-time {
  font-size: 22rpx;
  color: #999;
  flex-shrink: 0;
}

.review-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
  width: 100%;
}

/* 空状态 */
.empty-course,
.empty-review {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  text-align: center;
  height: 100%;
  min-height: 300rpx;
  width: 100%;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  z-index: 1000;
  width: 100vw;
  box-sizing: border-box;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 88rpx;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  min-width: 0;
}

.contact-btn {
  background: #f8f9fa;
  color: #333;
}

.subscribe-btn {
  background: #07c160;
  color: white;
}

/* 安全区域 */
@supports (padding-bottom: constant(safe-area-inset-bottom)) {
  .action-bar {
    padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  }
}

@supports (padding-bottom: env(safe-area-inset-bottom)) {
  .action-bar {
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  }
}

/* 确保内容不被底部操作栏遮挡 */
.tab-container {
  padding-bottom: 120rpx;
}