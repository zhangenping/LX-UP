/* pages/teacher/reviews/reviews.wxss */
.container {
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 头部 - 使用固定定位确保不与其他元素重叠 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.nav-area {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 16rpx;
  margin-left: -16rpx;
}

.back-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 8rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

/* 主要内容 - 添加顶部内边距避免与头部重叠 */
.main-content {
  flex: 1;
  height: 100%;
  padding-top: 120rpx; /* 与头部高度一致 */
  box-sizing: border-box;
}

/* 概览区域 */
.overview-section {
  padding: 30rpx;
}

.overview-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

/* 平均评分 */
.avg-rating {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-right: 40rpx;
  border-right: 1rpx solid #f0f0f0;
  min-width: 200rpx;
}

.avg-score {
  font-size: 64rpx;
  font-weight: bold;
  color: #ff6b35;
  line-height: 1;
}

.avg-total {
  font-size: 28rpx;
  color: #999;
  margin: 10rpx 0 20rpx;
}

.avg-stars {
  display: flex;
}

.avg-stars .star {
  font-size: 32rpx;
  color: #ddd;
  margin: 0 2rpx;
}

.avg-stars .star.active {
  color: #ffd700;
}

/* 评分分布 */
.rating-distribution {
  flex: 1;
  padding-left: 40rpx;
}

.dist-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  height: 40rpx;
}

.dist-item:last-child {
  margin-bottom: 0;
}

.star-text {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
}

.progress-bar {
  flex: 1;
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: linear-gradient(90deg, #ffd700, #ff6b35);
  border-radius: 8rpx;
  transition: width 0.3s;
}

.count {
  width: 60rpx;
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

/* 评价列表区域 */
.reviews-section {
  padding: 0 30rpx 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.count-badge {
  background: #07c160;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin: 30rpx 0 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #ccc;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 80rpx 0;
}

/* 评价列表 */
.reviews-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.review-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
  transition: all 0.3s;
}

/* 用户信息行 */
.user-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.user-info {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.course {
  font-size: 24rpx;
  color: #07c160;
  background: #f0f9f4;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

/* 评分徽章 */
.rating-badge {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width: 80rpx;
}

.rating-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b35;
  margin-bottom: 4rpx;
}

/* 单个评价的星星样式 */
.stars-small {
  display: flex;
  justify-content: flex-end;
}

.star-small {
  font-size: 20rpx;
  margin: 0 2rpx;
}

.star-small.active {
  color: #ffd700;
}

.star-small.inactive {
  color: #ddd;
}

/* 评价内容 */
.review-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 24rpx;
  word-break: break-word;
}

/* 评价底部 */
.review-footer {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  border: 1rpx solid #91d5ff;
}

.time-actions {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.time {
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  padding-top: 40rpx;
  text-align: center;
}

.load-btn {
  background: white;
  color: #666;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
}

.load-btn:active {
  background: #f8f9fa;
}

.load-btn:disabled {
  opacity: 0.6;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 响应式调整 */
@media (max-width: 480px) {
  .overview-card {
    flex-direction: column;
    align-items: stretch;
  }
  
  .avg-rating {
    padding-right: 0;
    padding-bottom: 40rpx;
    border-right: none;
    border-bottom: 1rpx solid #f0f0f0;
    margin-bottom: 40rpx;
    min-width: auto;
  }
  
  .rating-distribution {
    padding-left: 0;
  }
  
  .user-row {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .rating-badge {
    align-items: flex-start;
    margin-top: 16rpx;
  }
  
  .stars-small {
    justify-content: flex-start;
  }
}

/* 优化动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.review-item {
  animation: fadeIn 0.3s ease-out;
  animation-fill-mode: both;
}

.review-item:nth-child(odd) {
  animation-delay: 0.05s;
}

.review-item:nth-child(even) {
  animation-delay: 0.1s;
}

/* 优化滚动条样式 */
scroll-view ::-webkit-scrollbar {
  width: 4rpx;
}

scroll-view ::-webkit-scrollbar-track {
  background: #f1f1f1;
}

scroll-view ::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4rpx;
}

scroll-view ::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}