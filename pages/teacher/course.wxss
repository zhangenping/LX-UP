/* pages/teacher/course.wxss */
.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

.course-header {
  background: white;
  padding: 40rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.course-teacher {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.course-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b35;
}

.section {
  background: white;
  margin: 20rpx 0;
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.course-info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-label {
  font-size: 28rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.schedule-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.day {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.time {
  font-size: 26rpx;
  color: #666;
}

.subscription-section {
  background: white;
  margin: 20rpx 0;
  padding: 30rpx;
  border-radius: 16rpx;
}

.subscription-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #07c160;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.verification-code {
  text-align: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #07c160, #05a854);
  border-radius: 16rpx;
  color: white;
}

.code-label {
  font-size: 26rpx;
  margin-bottom: 16rpx;
  opacity: 0.9;
}

.code-value {
  font-size: 48rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
  font-family: 'Courier New', monospace;
}

.copy-hint {
  display: block;
  font-size: 22rpx;
  opacity: 0.8;
  margin-top: 8rpx;
  font-weight: normal;
}

.code-tip {
  font-size: 24rpx;
  opacity: 0.8;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.contact-btn {
  flex: 1;
  background: transparent;
  color: #07c160;
  border: 2rpx solid #07c160;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.subscribe-btn {
  flex: 2;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 30rpx;
}

.subscribe-btn.subscribed {
  background: #ccc;
  color: #999;
}