/* pages/teacher/course.wxss */

/* 页面级滚动容器 */
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 主要内容容器 - 可滚动 */
.container {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 20rpx;
}

/* 左上角返回按钮 */
.corner-back-btn {
  position: fixed;
  left: 20rpx;
  top: 20rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.15);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.corner-back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 1);
}

/* 课程头部信息 */
.course-header {
  background: white;
  padding: 40rpx 30rpx;
  margin: 80rpx 20rpx 20rpx 20rpx; /* 上边距增加 */
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.course-title {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  line-height: 1.4;
}

.course-teacher {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #666;
  margin-bottom: 25rpx;
}

.course-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #e74c3c;
}

/* 课程详情部分 */
.section {
  background: white;
  margin: 25rpx 20rpx;
  padding: 35rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 25rpx;
  display: flex;
  align-items: center;
}

.section-title .title-decoration {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: #07c160;
  border-radius: 3rpx;
}

.section-content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.7;
  word-wrap: break-word;
  overflow-wrap: break-word;
  min-height: 60rpx;
}

/* 课程信息网格 */
.course-info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.info-item {
  text-align: center;
  padding: 30rpx 25rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

/* 授课时间 */
.schedule-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  min-height: 90rpx;
}

.day {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.time {
  font-size: 28rpx;
  color: #666;
}

/* 订阅状态区域 */
.subscription-section {
  background: #fff;
  margin: 25rpx 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.subscription-header {
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
}

.subscription-header text {
  margin-left: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #07c160;
}

.verification-card {
  padding: 0 30rpx;
}

.verification-code {
  text-align: center;
  padding: 30rpx 0;
}

.code-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.code-value {
  font-size: 56rpx;
  font-weight: bold;
  letter-spacing: 6rpx;
  color: #e74c3c;
  background: #f8f9fa;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  margin: 20rpx 0;
  position: relative;
  border: 2rpx dashed #e0e0e0;
  word-break: break-all;
  overflow: hidden;
}

.copy-hint {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 20rpx;
  color: #999;
  letter-spacing: normal;
  font-weight: normal;
}

.code-tip {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  padding: 0 20rpx;
}

/* 二维码区域 */
.qrcode-divider {
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, #e0e0e0 50%, transparent 100%);
  margin: 20rpx 0;
}

.qrcode-content {
  text-align: center;
  padding: 20rpx 0;
}

.qrcode-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 25rpx;
}

.qrcode-image {
  width: 280rpx;
  height: 280rpx;
  border: 8rpx solid #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  margin: 0 auto;
}

.qrcode-actions {
  display: flex;
  gap: 20rpx;
  margin: 25rpx 0 15rpx;
  justify-content: center;
  flex-wrap: wrap;
}

.qrcode-btn {
  padding: 16rpx 28rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 24rpx;
  min-width: 130rpx;
}

.save-btn {
  background: #3498db;
  color: white;
}

.share-btn {
  background: #2ecc71;
  color: white;
}

.qrcode-tip {
  font-size: 22rpx;
  color: #999;
  padding: 0 20rpx;
}

/* 订阅详情 */
.subscription-detail {
  background: #f8f9fa;
  padding: 25rpx 30rpx;
  margin-top: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  margin: 0 15rpx 0 10rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 底部操作栏 - 固定在页面底部，不在滚动区域内 */
.action-bar {
  background: #fff;
  padding: 25rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.06);
  flex-shrink: 0; /* 防止底部栏被压缩 */
}

.contact-btn {
  flex: 1;
  background: #f8f9fa;
  color: #333;
  border: none;
  border-radius: 50rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.subscribe-btn {
  flex: 2;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-weight: 600;
}

.subscribe-btn.subscribed {
  background: #ccc;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .course-header,
  .section,
  .subscription-section {
    margin: 15rpx;
    padding: 30rpx 25rpx;
  }
  
  .code-value {
    font-size: 48rpx;
    letter-spacing: 4rpx;
    padding: 25rpx 15rpx;
  }
  
  .qrcode-image {
    width: 240rpx;
    height: 240rpx;
  }
  
  .course-info-grid {
    grid-template-columns: 1fr;
    gap: 20rpx;
  }
  
  .qrcode-actions {
    flex-direction: column;
    align-items: center;
  }
  
  .qrcode-btn {
    width: 200rpx;
  }
}