/* pages/teacher/manage/manage.wxss */
.page-container {
  background: #f5f5f5;
  min-height: 100vh;
  height: 100vh; /* 确保容器有固定高度 */
  display: flex;
  flex-direction: column;
}

.header {
  background: white;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0; /* 防止头部被压缩 */
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  background: #f5f5f5;
  flex: 1; /* 占据剩余空间 */
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 主要内容区域 - 可滚动 */
.main-content {
  flex: 1;
  overflow-y: auto; /* 启用垂直滚动 */
  padding-bottom: 20rpx;
}

.form-content {
  padding: 30rpx;
  min-height: 100%; /* 确保内容区域有足够高度 */
}

.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #1989fa;
  background: white;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #1989fa;
  background: white;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 头像上传样式 */
.avatar-upload {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx dashed #ddd;
  margin: 0 auto;
}

.avatar-preview {
  width: 100%;
  height: 100%;
}

.avatar-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 24rpx;
  text-align: center;
  padding: 12rpx;
}

/* 底部按钮 - 固定在底部 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.submit-btn:active {
  opacity: 0.8;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .header {
    padding: 30rpx 20rpx 20rpx;
  }
  
  .form-content {
    padding: 20rpx;
  }
  
  .form-section {
    padding: 25rpx 20rpx;
  }
  
  .footer {
    padding: 20rpx;
  }
}

.course-management {
  margin-top: 20rpx;
}

.add-course-btn {
  width: 100%;
  height: 80rpx;
  background: #07c160;
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  margin-bottom: 30rpx;
}

.add-course-btn:active {
  opacity: 0.8;
}

.course-list {
  margin-bottom: 20rpx;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 25rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  background: #fafafa;
}

.course-info {
  flex: 1;
}

.course-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
}

.course-details {
  display: flex;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.course-price {
  font-size: 26rpx;
  color: #e64340;
  font-weight: 500;
}

.course-hours, .course-level {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.course-schedule {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.schedule-item {
  font-size: 22rpx;
  color: #07c160;
  background: #f0f9f4;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
}

.delete-course-btn {
  background: #ff4d4f;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.no-courses {
  text-align: center;
  color: #999;
  padding: 40rpx;
  font-size: 26rpx;
}

/* 课程弹窗样式 */
.course-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
}

.modal-form-item {
  margin-bottom: 25rpx;
}

.modal-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.modal-textarea {
  width: 100%;
  height: 120rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.modal-form-row {
  display: flex;
  gap: 20rpx;
}

.modal-form-row .modal-form-item {
  flex: 1;
  margin-bottom: 0;
}

.modal-picker {
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.schedule-input-group {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.schedule-picker {
  min-width: 120rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 15rpx;
  text-align: center;
  font-size: 26rpx;
  background: #fafafa;
}

.schedule-time-input {
  flex: 1;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 26rpx;
  background: #fafafa;
}

.remove-schedule {
  color: #ff4d4f;
  font-size: 24rpx;
  padding: 10rpx;
}

.add-schedule-btn {
  background: #f0f0f0;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 26rpx;
  width: 100%;
  margin-top: 10rpx;
}

.modal-submit-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  margin-top: 20rpx;
}

.modal-submit-btn:active {
  opacity: 0.8;
}