.login-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40rpx;
  }
  
  .login-header {
    text-align: center;
    padding: 80rpx 0 120rpx 0;
    margin-top: 150rpx;
  }
  
  .logo {
    width: 150rpx;
    height: 150rpx;
    border-radius: 24rpx;
    margin-bottom: 30rpx;
  }
  
  .app-name {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    color: #fff;
    margin-bottom: 16rpx;
  }
  
  .app-desc {
    display: block;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .login-methods {
    margin-bottom: 60rpx;
  }
  
  .method-card {
    background: #fff;
    border-radius: 24rpx;
    padding: 10rpx 20rpx;
    text-align: center;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }
  
  .method-card:active {
    transform: scale(0.98);
    box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
  }
  
  .method-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 30rpx;
  }
  
  .method-text {
    display: block;
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .method-desc {
    display: block;
    font-size: 26rpx;
    color: #999;
  }

  .login-btn-container {
    margin-bottom: 80rpx;
    padding: 40rpx 20rpx;
  }
  
  .wechat-login-btn {
    width: 90% !important;
    height: 80rpx;
    background:#29a364;
    color: #fff;
    border: none;
    border-radius: 20rpx;
    font-size: 0; /* 清除按钮默认字体影响 */
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
    transition: all 0.3s ease;
  }
  
  /* 按钮点击效果 */
  .wechat-login-btn:active {
    transform: scale(0.98);
    box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
  }
  
  /* 禁用状态 */
  .wechat-login-btn[disabled] {
    background: linear-gradient(135deg, #cccccc, #aaaaaa);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    opacity: 0.7;
  }
  
  /* 按钮图标 */
  .btn-icon {
    font-size: 40rpx;
    margin-right: 16rpx;
    line-height: 1;
  }
  
  /* 按钮文字 */
  .btn-text {
    font-size: 34rpx;
    font-weight: 600;
    line-height: 1;
  }
  
  /* 登录提示 */
  .login-tip {
    text-align: center;
    font-size: 26rpx;
    color: #ffcc00;
    margin-top: 20rpx;
    padding: 12rpx;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 8rpx;
    /* 关键：固定高度，透明显示 */
    height: 60rpx; /* 固定高度 */
    line-height: 60rpx; /* 垂直居中 */
    visibility: hidden; /* 隐藏但占位 */
    opacity: 0; /* 完全透明 */
    transition: opacity 0.3s ease;
  }
  
  /* 显示时的状态 */
  .login-tip.active {
    visibility: visible;
    opacity: 1;
  }
  
  .agreement {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    padding: 0 40rpx;
  }
  
  .agreement-text {
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 8rpx;
  }
  
  .agreement-link {
    font-size: 24rpx;
    color: #fff;
    text-decoration: underline;
  }