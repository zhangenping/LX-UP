.login-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40rpx;
  }
  
  .login-header {
    text-align: center;
    padding: 80rpx 0 120rpx 0;
  }
  
  .logo {
    width: 120rpx;
    height: 120rpx;
    border-radius: 24rpx;
    margin-bottom: 30rpx;
  }
  
  .app-name {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    color: #fff;
    margin-bottom: 16rpx;
  }
  
  .app-desc {
    display: block;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .login-methods {
    margin-bottom: 60rpx;
  }
  
  .method-card {
    background: #fff;
    border-radius: 24rpx;
    padding: 60rpx 40rpx;
    text-align: center;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }
  
  .method-card:active {
    transform: scale(0.98);
    box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
  }
  
  .method-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 30rpx;
  }
  
  .method-text {
    display: block;
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .method-desc {
    display: block;
    font-size: 26rpx;
    color: #999;
  }
  
  .agreement {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    padding: 0 40rpx;
  }
  
  .agreement-text {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 8rpx;
  }
  
  .agreement-link {
    font-size: 24rpx;
    color: #fff;
    text-decoration: underline;
  }