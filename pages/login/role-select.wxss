.role-select-container {
    min-height: 100vh;
    background: #f5f5f5;
    padding: 40rpx;
  }
  
  .progress-steps {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 60rpx;
    margin-bottom: 80rpx;
  }
  
  .step {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .step-number {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: #07c160;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
    margin-bottom: 16rpx;
  }
  
  .step-text {
    font-size: 24rpx;
    color: #333;
    font-weight: 500;
  }
  
  .select-header {
    text-align: center;
    margin-bottom: 80rpx;
  }
  
  .title {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .subtitle {
    display: block;
    font-size: 28rpx;
    color: #666;
  }
  
  .role-options {
    margin-bottom: 80rpx;
  }
  
  .role-card {
    background: #fff;
    border: 4rpx solid #eee;
    border-radius: 24rpx;
    padding: 60rpx 40rpx;
    margin-bottom: 40rpx;
    transition: all 0.3s ease;
    position: relative;
  }
  
  .role-card.selected {
    border-color: #07c160;
    background: #f0f9f4;
  }
  
  .role-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 30rpx;
  }
  
  .role-title {
    display: block;
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .role-desc {
    display: block;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 40rpx;
  }
  
  .features {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .feature-item {
    display: block;
    font-size: 26rpx;
    color: #666;
  }
  
  .approve-notice {
    background: #fff2e8;
    border: 2rpx solid #ffa940;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-top: 30rpx;
    text-align: center;
  }
  
  .approve-notice text {
    font-size: 24rpx;
    color: #d46b08;
  }
  
  .confirm-btn {
    width: 100%;
    height: 100rpx;
    background: #07c160;
    color: #fff;
    border: none;
    border-radius: 12rpx;
    font-size: 32rpx;
    font-weight: 500;
  }
  
  .confirm-btn.disabled {
    background: #ccc;
  }
  
  .role-tip {
    text-align: center;
    margin-top: 40rpx;
  }
  
  .role-tip text {
    font-size: 24rpx;
    color: #999;
  }