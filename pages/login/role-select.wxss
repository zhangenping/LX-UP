.role-select-container {
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}

.progress-steps {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  margin-bottom: 40rpx; /* 减少间距 */
  flex-shrink: 0;
  padding-top: 30rpx; /* 减少顶部间距 */
  max-width: 100vw;
  box-sizing: border-box;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.step-number {
  width: 50rpx; /* 缩小图标 */
  height: 50rpx;
  border-radius: 50%;
  background: #07c160;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx; /* 缩小字体 */
  margin-bottom: 12rpx; /* 减少间距 */
  flex-shrink: 0;
}

.step-text {
  font-size: 22rpx; /* 缩小字体 */
  color: #333;
  font-weight: 500;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

.select-header {
  text-align: center;
  margin-bottom: 40rpx; /* 减少间距 */
  flex-shrink: 0;
  padding: 0 40rpx;
  box-sizing: border-box;
  max-width: 100vw;
}

.title {
  display: block;
  font-size: 40rpx; /* 缩小标题 */
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx; /* 减少间距 */
  word-wrap: break-word;
}

.subtitle {
  display: block;
  font-size: 26rpx; /* 缩小副标题 */
  color: #666;
  word-wrap: break-word;
}

/* 可滚动的内容区域 */
.content-scroll {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 200rpx; /* 减少预留空间 */
}

.role-options {
  padding: 0 40rpx 20rpx; /* 减少内边距 */
  box-sizing: border-box;
  width: 100%;
  max-width: 100vw;
}

.role-card {
  background: #fff;
  border: 3rpx solid #eee; /* 减少边框宽度 */
  border-radius: 20rpx; /* 缩小圆角 */
  padding: 30rpx; /* 大幅减少内边距 */
  margin-bottom: 25rpx; /* 减少卡片间距 */
  transition: all 0.3s ease;
  position: relative;
  width: 100%;
  box-sizing: border-box;
  max-width: 100%;
}

.role-card.selected {
  border-color: #07c160;
  background: #f0f9f4;
  border-width: 6rpx;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.15); /* 缩小阴影 */
}

/* 卡片头部布局优化 */
.card-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 25rpx; /* 减少间距 */
}

.role-icon {
  width: 60rpx; /* 缩小图标 */
  height: 60rpx;
  margin-right: 20rpx; /* 减少右边距 */
  flex-shrink: 0;
}

.role-title-section {
  flex: 1;
}

.role-title {
  display: block;
  font-size: 32rpx; /* 缩小标题 */
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx; /* 大幅减少间距 */
  word-wrap: break-word;
}

.role-desc {
  display: block;
  font-size: 26rpx; /* 缩小描述文字 */
  color: #666;
  line-height: 1.4; /* 调整行高 */
  word-wrap: break-word;
}

.features {
  display: flex;
  flex-direction: column;
  gap: 16rpx; /* 减少间距 */
  width: 100%;
}

.feature-item {
  display: block;
  font-size: 24rpx; /* 缩小功能项文字 */
  color: #666;
  line-height: 1.4;
  word-wrap: break-word;
}

.approve-notice {
  background: #fff2e8;
  border: 2rpx solid #ffa940;
  border-radius: 10rpx; /* 缩小圆角 */
  padding: 16rpx; /* 减少内边距 */
  margin-top: 20rpx; /* 减少上边距 */
  text-align: center;
  width: 100%;
  box-sizing: border-box;
}

.approve-notice text {
  font-size: 22rpx; /* 缩小文字 */
  color: #d46b08;
  line-height: 1.4;
  word-wrap: break-word;
}

/* 底部按钮区域 */
.bottom-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #f5f5f5;
  padding: 20rpx 40rpx; /* 减少内边距 */
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05); /* 缩小阴影 */
  width: 100%;
  box-sizing: border-box;
  z-index: 100;
}

.confirm-btn {
  width: 100%;
  height: 90rpx; /* 缩小按钮高度 */
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 10rpx; /* 缩小圆角 */
  font-size: 30rpx; /* 缩小字体 */
  font-weight: 500;
  margin-bottom: 16rpx; /* 减少间距 */
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.confirm-btn:not(.disabled):active {
  transform: scale(0.98);
  background: #06a653;
}

.confirm-btn.disabled {
  background: #ccc;
}

.role-tip {
  text-align: center;
  width: 100%;
}

.role-tip text {
  font-size: 22rpx; /* 缩小提示文字 */
  color: #999;
  line-height: 1.4;
  word-wrap: break-word;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .progress-steps {
    padding: 0 30rpx;
    margin-bottom: 30rpx;
    padding-top: 20rpx;
  }
  
  .select-header {
    margin-bottom: 30rpx;
    padding: 0 30rpx;
  }
  
  .title {
    font-size: 36rpx;
  }
  
  .role-options {
    padding: 0 30rpx 15rpx;
  }
  
  .role-card {
    /* 确保普通状态的边框与选中状态一致 */
    border: 4rpx solid #eee;
    transition: all 0.3s ease;
  }
  
  .bottom-section {
    padding: 15rpx 30rpx;
  }
  
  .confirm-btn {
    height: 80rpx;
    font-size: 28rpx;
  }
  
  .content-scroll {
    padding-bottom: 180rpx;
  }
}

/* 安全区域适配 */
@supports (padding-bottom: constant(safe-area-inset-bottom)) {
  .bottom-section {
    padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  }
  .content-scroll {
    padding-bottom: calc(200rpx + constant(safe-area-inset-bottom));
  }
}

@supports (padding-bottom: env(safe-area-inset-bottom)) {
  .bottom-section {
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  }
  .content-scroll {
    padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
  }
}