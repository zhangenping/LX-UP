.phone-binding-container {
    min-height: 100vh;
    background: #f5f5f5;
    padding: 40rpx;
  }
  
  .progress-steps {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 60rpx;
    margin-bottom: 80rpx;
  }
  
  .step {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }
  
  .step-number {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: #ddd;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
    margin-bottom: 16rpx;
  }
  
  .step.active .step-number {
    background: #07c160;
  }
  
  .step-text {
    font-size: 24rpx;
    color: #999;
  }
  
  .step.active .step-text {
    color: #333;
    font-weight: 500;
  }
  
  .user-info-card {
    background: #fff;
    border-radius: 24rpx;
    padding: 60rpx 40rpx;
    text-align: center;
    margin-bottom: 40rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .user-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin-bottom: 24rpx;
  }
  
  .user-nickname {
    display: block;
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .welcome-text {
    display: block;
    font-size: 28rpx;
    color: #666;
  }
  
  .phone-form {
    background: #fff;
    border-radius: 24rpx;
    padding: 60rpx 40rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .form-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .form-desc {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 60rpx;
  }
  
  .input-item {
    margin-bottom: 50rpx;
  }
  
  .input-label {
    display: block;
    font-size: 30rpx;
    color: #333;
    margin-bottom: 20rpx;
    font-weight: 500;
  }
  
  .phone-input, .code-input {
    height: 100rpx;
    border: 2rpx solid #eee;
    border-radius: 12rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
  }
  
  .verify-code-group {
    display: flex;
    align-items: center;
  }
  
  .code-input {
    flex: 1;
    margin-right: 20rpx;
  }
  
  .get-code-btn {
    width: 240rpx;
    height: 100rpx;
    background: #07c160;
    color: #fff;
    border: none;
    border-radius: 12rpx;
    font-size: 28rpx;
  }
  
  .get-code-btn.disabled {
    background: #ccc;
  }
  
  .next-btn {
    width: 100%;
    height: 100rpx;
    background: #07c160;
    color: #fff;
    border: none;
    border-radius: 12rpx;
    font-size: 32rpx;
    font-weight: 500;
    margin-top: 40rpx;
  }
  
  .next-btn.disabled {
    background: #ccc;
  }
  
  .skip-tip {
    text-align: center;
    margin-top: 60rpx;
    color: #999;
    font-size: 28rpx;
  }