/* pages/login/phone-binding.wxss */

/* ===== 核心容器与背景层 ===== */
.phone-binding-container {
  position: relative; /* 定位基准 */
  min-height: 100vh;
  padding: 40rpx;
  overflow: hidden; /* 防止背景图片溢出 */
}

/* 背景图片层 */
.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0; /* 最底层 */
}

.background-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.85); /* 白色半透明遮罩 */
  z-index: 1; /* 在背景图之上，内容之下 */
}

/* ===== 以下是原有的所有内容样式 ===== */
/* 所有内容容器都需要设置定位和更高的z-index */
.progress-steps,
.user-info-card,
.phone-form,
.skip-tip {
  position: relative;
  z-index: 2; /* 在遮罩层之上 */
}

/* 进度指示器 */
.progress-steps {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 60rpx;
  margin-bottom: 80rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

/* 步骤之间的连线 */
.step + .step::before {
  content: '';
  position: absolute;
  top: 30rpx;
  left: -50%;
  width: 100%;
  height: 2rpx;
  background: #ddd;
  z-index: 1;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #ddd;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 2;
}

.step.active .step-number {
  background: #07c160;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

.step-text {
  font-size: 24rpx;
  color: #999;
}

.step.active .step-text {
  color: #333;
  font-weight: 500;
}

/* 用户信息卡片 */
.user-info-card {
  background: transparent;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  border: 5rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
}

.user-nickname {
  display: block;
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.welcome-text {
  display: block;
  font-size: 30rpx;
  color: #666;
}

/* 表单区域 */
.phone-form {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.form-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  text-align: center;
}

.form-desc {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 60rpx;
  text-align: center;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-item {
  margin-bottom: 50rpx;
}

.input-label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

/* 带图标的输入框容器 */
.input-with-icon {
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
}

/* 【核心修复】输入框左侧图标 */
.input-icon {
  /* 定位 */
  position: absolute !important;
  left: 25rpx !important;
  top: 50% !important;
  transform: translateY(-50%) !important; /* 精准垂直居中 */
  
  /* 尺寸 - 解决 0x0 问题的关键 */
  display: block !important;
  width: 40rpx !important;
  height: 40rpx !important;
  line-height: 40rpx !important;
  text-align: center !important;
  
  /* 外观 */
  font-size: 36rpx !important;
  /* color: #07c160 !important; */
  
  /* 层级 */
  z-index: 100 !important;
  
  /* 调试时可取消下一行的注释 */
  /* background-color: rgba(255, 0, 0, 0.5) !important; */
}

/* 手机号输入框 */
.phone-input {
  height: 100rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  /* 左内边距必须足够大，给图标留出位置 */
  padding-left: 75rpx !important; /* 比图标的 left + width 略大 */
  padding-right: 30rpx;
  font-size: 32rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.code-input {
  height: 100rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  width: 100%;
  background: #fff;
}

.phone-input::placeholder, .code-input::placeholder {
  color: #bbb;
}

.verify-code-group {
  display: flex;
  align-items: center;
}

.code-input {
  flex: 1;
  margin-right: 20rpx;
  padding-left: 75rpx !important;
  padding-right: 30rpx;
}

.get-code-btn {
  width: 240rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #07c160, #05a04e);
  color: #fff;
  border: none;
  border-radius:  50rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;           /* 1. 使用flex布局 */
  align-items: center;     /* 2. 垂直居中 */
  justify-content: center; /* 3. 水平居中 */
}

.get-code-btn.disabled {
  background: #ccc;
  color: #888;
  display: flex;           /* 1. 使用flex布局 */
  align-items: center;     /* 2. 垂直居中 */
  justify-content: center; /* 3. 水平居中 */
}

.next-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #07c160, #05a04e);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 40rpx;
  display: flex;           /* 1. 使用flex布局 */
  align-items: center;     /* 2. 垂直居中 */
  justify-content: center; /* 3. 水平居中 */
}

.next-btn.disabled {
  background: #ccc;
}

/* 跳过提示 */
.skip-tip {
  text-align: center;
  margin-top: 60rpx;
  color: #666;
  font-size: 28rpx;
  padding: 20rpx;
}

.skip-tip text {
  border-bottom: 2rpx dashed #999;
  padding-bottom: 4rpx;
}

/* 适配不同屏幕 */
@media (max-width: 375px) {
  .phone-binding-container {
    padding: 30rpx 20rpx;
  }
  .progress-steps {
    padding: 0 30rpx;
    margin-bottom: 60rpx;
  }
  .user-info-card,
  .phone-form {
    padding: 40rpx 30rpx;
  }
  .form-title {
    font-size: 34rpx;
  }
  .form-desc {
    font-size: 28rpx;
  }
}