    <!-- 微信一键登录按钮 -->
    <view class="login-btn-container">
    <button 
      class="wechat-login-btn" 
      bindtap="onGetUserProfile"
      disabled="{{!agreementChecked}}"
    >
      <text class="btn-icon iconfont"></text>
      <text class="btn-text">微信一键登录</text>
    </button>
    
    <!-- 状态提示 -->
    <view class="login-tip {{!agreementChecked ? 'active' : ''}}">
      请先同意用户协议和隐私政策
    </view>
  </view>

  <!-- 协议说明 -->
  <view class="agreement">
    <view class="agreement-switch">
      <text class="agreement-text">我已阅读并同意</text>
      <switch 
        checked="{{agreementChecked}}" 
        bindchange="onAgreementChange"
        color="#07c160"
        style="transform: scale(0.7)"
      />
    </view>
    <view class="agreement-links">
      <text class="agreement-link" bindtap="showUserAgreement">《用户协议》</text>
      <text class="agreement-text">和</text>
      <text class="agreement-link" bindtap="showPrivacyPolicy">《隐私政策》</text>
    </view>
  </view>
</view>