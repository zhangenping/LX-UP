/* components/half-rate-star/half-rate-star.wxss */
.half-rate-star {
  display: flex;
  align-items: center;
}

.stars-container {
  display: flex;
  align-items: center;
}

.star-item {
  position: relative;
  width: 32rpx;
  height: 32rpx;
  margin-right: 4rpx;
}

.star-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  color: #ddd;
  line-height: 1;
}

.star-fill {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  font-size: 32rpx;
  line-height: 1;
  overflow: hidden;
  white-space: nowrap;
  transition: width 0.2s ease-in-out;
}

/* 半星时的特殊处理 */
.star-fill.half {
  /* 半星时添加一些特殊样式，可选 */
}

/* 点击效果 */
.star-item:active {
  transform: scale(0.9);
}

.score-text {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #666;
}